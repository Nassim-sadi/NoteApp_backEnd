<h4>DashBoard</h4>
<h3>Welcome {{name}} </h3>
{{#if notes}}
  <table class='striped'>
    <thead>
      <tr>
        <th>title</th>
        <th>date</th>
        <th>status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each notes}}
        <tr>
          <td> <a href='/stories/{{_id}} '> {{title}} </a></td>
          <td>{{createdAt}} </td>
          <td> <span class='dash-status'>{{status}} </span> </td>
          <td> </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>You have not written any stories</p>
{{/if}}